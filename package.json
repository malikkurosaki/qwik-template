{
  "name": "qwik-template",
  "description": "Blank project with routing included",
  "private": true,
  "type": "module",

  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },

  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "qwik check-client src dist && vite build -c adapters/bun/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",

    "dev.fe": "vite --mode ssr",
    "dev.be": "bun --watch src/server.ts",

    "preview": "qwik build preview && vite preview --open",
    "serve": "bun server/entry.bun.js",

    "lint": "eslint \"src/**/*.ts*\"",
    "fmt": "prettier --write .",

    "qwik": "qwik",

    "db.push": "bun run ./src/db/push.ts",
    "db.seed": "bun run ./src/db/seed.ts"
  },

  "devDependencies": {
    "@builder.io/qwik": "^1.18.0",
    "@builder.io/qwik-city": "^1.18.0",

    "@qwikest/icons": "^0.0.13",

    "vite": "7.2.6",
    "vite-tsconfig-paths": "^4.2.1",
    "@tailwindcss/vite": "^4.1.4",

    "tailwindcss": "^4.1.4",
    "typescript": "5.4.5",
    "tsx": "^4.21.0",

    "@types/node": "20.19.0",
    "@types/bun": "*",
    "@types/pg": "^8.16.0",

    "eslint": "9.32.0",
    "eslint-plugin-qwik": "^1.18.0",
    "@eslint/js": "latest",
    "globals": "16.4.0",

    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",

    "drizzle-kit": "^0.31.8",
    "typescript-eslint": "8.38.0",
    "typescript-plugin-css-modules": "latest"
  },

  "dependencies": {
    "elysia": "^1.4.19",

    "@elysiajs/bearer": "^1.4.2",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/eden": "^1.4.5",

    "better-auth": "^1.4.7",

    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",

    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "undici": "*"
  }
}
